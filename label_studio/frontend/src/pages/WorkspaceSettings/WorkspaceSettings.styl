.workspace-settings
  flex: 1
  min-height: 0
  display: flex
  flex-direction: column
  &__tab_disabled
    display: flex
    align-items: center
    justify-content: center
    &::before
      content: ""
      display: block
      height: 8px
      width: 8px
      border-radius: 4px
      margin-right: 6px
      background: $red_7
  form.workspace-name
    width: 300px
    margin: 0px auto 16px
  form.workspace-name > *:not(:first-child)
    margin-top: 32px